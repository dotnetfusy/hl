@model LibraryItem
<div>
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-3">
                <h3>@Model.Title - @Model.Author</h3>
                <h4>@Model.Format</h4>
                <h4>@Model.Year</h4>
                <h4>@Model.CheckedOut</h4>
            </div>
            <div class="col-md-3" style="padding-right:50px">
                <h3 class="pull-right">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Index" class="btn btn-success">Return</a>
                </h3>
            </div>
        </div>
    </div>
</div>
