@model LibraryItem
<h2>Item edit</h2>
<hr />
<div class="row">
    <form asp-controller="Item" asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="container">
            <div class="col-md-4">
                <img class="img-fluid img-thumbnail" src="@Model.CoverString"/>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <p>Upload image:</p>
                    <input type="file" name="file" />
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Format" class="control-label">Format</label>
                    <input asp-for="Format" class="form-control" />
                    <span asp-validation-for="Format" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                @if (Model.CheckedOut == true)
                {

                    <div class="form-group">
                        <label asp-for="CheckedOutTo" class="control-label">Check out to</label>
                        <input asp-for="CheckedOutTo" class="form-control" />
                        <span asp-validation-for="CheckedOutTo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CheckedOutBy" class="control-label">Check out by</label>
                        <input asp-for="CheckedOutBy" class="form-control" />
                        <span asp-validation-for="CheckedOutBy" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CheckedOutDate" class="control-label">Check out date</label>
                        <input asp-for="CheckedOutDate" class="form-control" />
                        <span asp-validation-for="CheckedOutDate" class="text-danger"></span>
                    </div>

                }

                <div class="form-group">
                    <input type="submit" value="Edit item" class="btn btn-success" style="margin-top:30px" />
                    <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Return</a>
                </div>
            </div>
        </div>
    </form>
</div>

