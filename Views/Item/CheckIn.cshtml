@model LibraryItem
<h2>Item check in</h2>
<hr />

<form asp-action="CheckIn">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="well">
        <div class="row">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CoverString" />
            <div class="container">
                <div class="col-md-4" style="padding-left:0px;">
                    <img class="img-fluid img-thumbnail center-block" src="@Model.CoverString" />
                </div>
                <div class="col-md-7">
                    <h2>Are you sure you want to check in this item?:</h2>
                    <h3>@Model.Title - @Model.Author | @Model.Format | @Model.Year </h3>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CheckedOutBy" class="col-form-label">Checked out by</label>
                            <input asp-for="CheckedOutBy" class="form-control" readonly />
                            <span asp-validation-for="CheckedOutBy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CheckedOutTo" class="col-form-label">Checked out to</label>
                            <input asp-for="CheckedOutTo" class="form-control" readonly />
                            <span asp-validation-for="CheckedOutTo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CheckedOutDate" class="col-form-label">Checked out date</label>
                            <input asp-for="CheckedOutDate" class="form-control" readonly />
                            <span asp-validation-for="CheckedOutDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="divider"></div>
                <div class="col-md-2 pull-right">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Accept" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-danger">Return</a>
                </div>
            </div>
        </div>
    </div>
</form>

